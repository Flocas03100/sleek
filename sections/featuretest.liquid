{% comment %}
  Feature Section
{% endcomment %}

<section class="feature-section">
  <div class="feature-section__container">
    {% if section.settings.image_position == 'left' %}
      <div class="feature-section__image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: 'large' }}" alt="{{ section.settings.image.alt | default: 'Feature image' }}">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    {% endif %}
    <div class="feature-section__content">
      {% if section.settings.heading != blank %}
        <h2 class="feature-section__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="feature-section__text">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="feature-section__button">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
    {% if section.settings.image_position == 'right' %}
      <div class="feature-section__image">
        {% if section.settings.image != blank %}
          <img src="{{ section.settings.image | img_url: 'large' }}" alt="{{ section.settings.image.alt | default: 'Feature image' }}">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

<style>
  .feature-section {
    padding: 50px 0;
  }
  .feature-section__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
  }
  .feature-section__image {
    flex: 1;
    padding: 20px;
  }
  .feature-section__image img {
    width: 100%;
    height: auto;
  }
  .feature-section__content {
    flex: 1;
    padding: 20px;
  }
  .feature-section__heading {
    font-size: 2em;
    margin-bottom: 20px;
  }
  .feature-section__text {
    margin-bottom: 20px;
  }
  .feature-section__button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
  }
</style>

{% schema %}
{
  "name": "Feature Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Position de l'image",
      "options": [
        {
          "value": "left",
          "label": "Gauche"
        },
        {
          "value": "right",
          "label": "Droite"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titre",
      "default": "Titre de la fonctionnalité"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Texte",
      "default": "<p>Description de la fonctionnalité.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte du bouton",
      "default": "En savoir plus"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Lien du bouton"
    }
  ],
  "presets": [
    {
      "name": "Feature Section",
      "category": "Image",
      "settings": {
        "image_position": "left"
      }
    }
  ]
}
{% endschema %}