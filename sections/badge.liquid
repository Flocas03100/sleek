{% schema %}
{
  "name": "Badges Luhxe",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon1",
      "label": "Icône 1"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Texte 1",
      "default": "Approuvé par plus de 100 compagnies"
    },
    {
      "type": "image_picker",
      "id": "icon2",
      "label": "Icône 2"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Texte 2",
      "default": "35€ DE CADEAUX"
    },
    {
      "type": "image_picker",
      "id": "icon3",
      "label": "Icône 3"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Texte 3",
      "default": "VALISE N°1 EN 2025"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Badges Luhxe"
    }
  ]
}
{% endschema %}

<div style="max-width: 320px; margin: 0; font-family: 'Montserrat', sans-serif;">
  <div style="display: flex; flex-direction: column; gap: 8px;">
    <!-- Badge principal -->
    <div style="background-color: {{ section.settings.bg_color }}; padding: 4px 6px; border-radius: 6px; display: flex; align-items: center; justify-content: center; gap: 6px;">
      {% if section.settings.icon1 != blank %}
        <img src="{{ section.settings.icon1 | image_url: width: 32 }}" alt="" style="height: 14px; width: auto;" />
      {% endif %}
      <span style="font-weight: 600; font-size: 12px; letter-spacing: -0.3px; text-align: center;">
        {{ section.settings.text1 }}
      </span>
    </div>

    <!-- Badges secondaires -->
    <div style="display: flex; gap: 6px; flex-wrap: wrap;">
      <div style="flex: 1; background-color: {{ section.settings.bg_color }}; padding: 4px 6px; border-radius: 6px; font-weight: 700; font-size: 12px; letter-spacing: -0.8px; text-align: center; display: flex; justify-content: center; align-items: center;">
        {% if section.settings.icon2 != blank %}
          <img src="{{ section.settings.icon2 | image_url: width: 20 }}" alt="" style="height: 14px; margin-right: 4px;" />
        {% endif %}
        {{ section.settings.text2 }}
      </div>
      <div style="flex: 1; background-color: {{ section.settings.bg_color }}; padding: 4px 6px; border-radius: 6px; font-weight: 700; font-size: 12px; letter-spacing: -0.8px; text-align: center; display: flex; justify-content: center; align-items: center;">
        {% if section.settings.icon3 != blank %}
          <img src="{{ section.settings.icon3 | image_url: width: 20 }}" alt="" style="height: 14px; margin-right: 4px;" />
        {% endif %}
        {{ section.settings.text3 }}
      </div>
    </div>
  </div>
</div>