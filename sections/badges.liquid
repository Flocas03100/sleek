{% schema %}
{
  "name": "Section Promos LUHXE",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Texte 1",
      "default": "Livraison suivie offerte"
    },
    {
      "type": "color",
      "id": "bg_color_1",
      "label": "Couleur de fond 1",
      "default": "#f4f4f4"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Texte 2",
      "default": "Satisfait ou remboursé 30 jours"
    },
    {
      "type": "color",
      "id": "bg_color_2",
      "label": "Couleur de fond 2",
      "default": "#f4f4f4"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Texte 3",
      "default": "Paiement sécurisé"
    },
    {
      "type": "color",
      "id": "bg_color_3",
      "label": "Couleur de fond 3",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Promos LUHXE Style",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="promo-luhxe-section" style="display: flex; flex-direction: column; gap: 8px; font-family: 'Montserrat', sans-serif; max-width: 320px; margin: 0 auto;">
  <div style="display: flex; align-items: center; justify-content: center; gap: 8px; border-radius: 6px; padding: 6px 8px; background-color: {{ section.settings.bg_color_1 }};">
    {% if section.settings.image_1 %}
      <img src="{{ section.settings.image_1 | img_url: '40x' }}" style="height: 14px; width: auto;" alt="Icon 1" />
    {% endif %}
    <span style="font-weight: 600; font-size: 12px; letter-spacing: -0.3px; text-align: center;">{{ section.settings.title_1 }}</span>
  </div>

  <div style="display: flex; gap: 8px; flex-wrap: wrap;">
    <div style="flex: 1; background-color: {{ section.settings.bg_color_2 }}; padding: 6px 8px; border-radius: 6px; font-weight: 700; font-size: 12px; letter-spacing: -0.6px; text-align: center; display: flex; justify-content: center; align-items: center;">
      {% if section.settings.image_2 %}
        <img src="{{ section.settings.image_2 | img_url: '40x' }}" style="height: 14px; width: auto; margin-right: 6px;" alt="Icon 2" />
      {% endif %}
      {{ section.settings.title_2 }}
    </div>
    <div style="flex: 1; background-color: {{ section.settings.bg_color_3 }}; padding: 6px 8px; border-radius: 6px; font-weight: 700; font-size: 12px; letter-spacing: -0.6px; text-align: center; display: flex; justify-content: center; align-items: center;">
      {% if section.settings.image_3 %}
        <img src="{{ section.settings.image_3 | img_url: '40x' }}" style="height: 14px; width: auto; margin-right: 6px;" alt="Icon 3" />
      {% endif %}
      {{ section.settings.title_3 }}
    </div>
  </div>
</div>
